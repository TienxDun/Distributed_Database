{
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "app/Dockerfile"
  },
  "deploy": {
    "startCommand": "php -S 0.0.0.0:$PORT -t app/public"
  },
  "environments": {
    "production": {
      "variables": {
        "MSSQL_SA_PASSWORD": "${{ RAILWAY_STATIC_URL }}",
        "MONGO_PASSWORD": "${{ MONGO_ROOT_PASSWORD }}"
      }
    }
  }
}